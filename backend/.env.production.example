# Production Environment Variables for Backend
# This file shows production configuration - DO NOT commit actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database - Use MongoDB Atlas or production database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/donationDB?retryWrites=true&w=majority

# JWT Configuration - Use strong random secret
JWT_SECRET=CHANGE-THIS-TO-SUPER-LONG-RANDOM-STRING-MIN-64-CHARACTERS
JWT_EXPIRE=7d

# Email Service
MAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your-production-sendgrid-key
MAIL_FROM=noreply@yourdomain.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# Frontend URL
FRONTEND_URL=https://yourapp.com

# Video Server Port
VIDEO_SERVER_PORT=5001
